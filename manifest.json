{
    "name": "Boolean Judge",
    "description": "Verify if the information is Fake or True",
    "version": "1.0",
    "manifest_version": 3,
    "icons":{
        "16": "/img/wi16x16.png",
        "256": "/img/i256x256.png"
    },
    "action": {
        "default_popup": "./popup/popup.html",
        "default_title": "Boolean Judge"
      },
    "permissions": ["activeTab", "scripting","contextMenus","storage"],
    "host_permissions": [
      "https://developer.chrome.com/*"
    ],
    "Content-Security-Policy":"script-src 'unsafe-hashes' 'sha256-RFWPLDbv2BY+rCkDzsE+0fr8ylGr2R2faWMhq4lfEQc=",
    "optional_permissions": ["tabs", "topSites"],
    "optional_host_permissions": ["http://www.developer.chrome.com/*", "https://www.google.com/"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./scripts/content.js", "./scripts/problem.js", "./scripts/optpermissions.js", "./scripts/notifi.js", "./popup/tabs.js"]
        }
    ]
  }